<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="953dp"
        android:layout_height="1304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        app:srcCompat="@drawable/green_gradient" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="39dp"
        android:layout_marginEnd="356dp"
        android:layout_marginRight="356dp"
        android:layout_marginBottom="396dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:srcCompat="@drawable/login" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="54dp"
        android:layout_height="39dp"
        android:layout_marginStart="540dp"
        android:layout_marginLeft="540dp"
        android:layout_marginTop="672dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/search" />

    <Button
        android:id="@+id/button_reg"
        android:layout_width="196dp"
        android:layout_height="53dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:text="Create a new account"
        app:backgroundTint="#287A2B"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="196dp"
        android:layout_height="45dp"
        android:layout_marginTop="676dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:text="Press for search"
        app:backgroundTint="#19731C"
        app:iconTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginTop="768dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:text="Login"
        app:backgroundTint="#19731C"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_marginStart="538dp"
        android:layout_marginLeft="538dp"
        android:layout_marginTop="768dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/log_in" />

</androidx.constraintlayout.widget.ConstraintLayout>